{
  "name": "calorie-leaderboard",
  "version": "1.0.0",
  "description": "A simple calorie leaderboard app with SQLite backend",
  "scripts": {
    "start": "cd backend && node server.js",
    "dev": "cd backend && nodemon server.js",
    "backend:install": "cd backend && npm install",
    "client:install": "cd client && npm install",
    "client:dev": "cd client && npm run dev",
    "client:build": "cd client && npm run build",
    "dev:all": "concurrently \"npm run dev\" \"npm run client:dev\"",
    "install:all": "npm run backend:install && npm run client:install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
